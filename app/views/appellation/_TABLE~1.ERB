<% if @appellations and not @appellations.empty? %>
  <table class="listset">
    <tr class="listheader">
      <td>Name</td>
      <td>Category</td>
	  <td>Parent Region</td>
    </tr>

    <% @appellations.each do |appellation| -%>
      <tr valign="top" class="<%= cycle('listrowodd', 'listroweven') %>">
        <td><%= link_to appellation.name,       :action => 'show', :id => appellation %></td>
        <td><%= link_to appellation.apptype.namechain_naked,    :action => 'show', 
											:id => appellation.apptype_id, :controller => 'apptype' %></td>
        <td><%= render :partial => "list_cell_parent" , :locals => { :appellation => appellation } %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @appellations unless !@pagination %>
<% end %>
